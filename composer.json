{
    "name": "sysborg/chatgpt",
    "description": "A simple and effective integration between Laravel and ChatGPT.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anderson Arruda",
            "email": "andmarruda@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0",
        "illuminate/http": "^10.0",
        "illuminate/config": "^10.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Sysborg\\ChatGPT\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sysborg\\ChatGPT\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sysborg\\ChatGPT\\Providers\\ChatGPTServiceProvider"
            ],
            "aliases": {
                "ChatGPT": "Sysborg\\ChatGPT\\Facades\\ChatGPT"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "laravel",
        "chatgpt",
        "openai",
        "gpt-4",
        "ai",
        "artificial-intelligence"
    ]
}